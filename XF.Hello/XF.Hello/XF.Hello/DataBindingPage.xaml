<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.Hello.DataBindingPage">
    <ContentPage.Content>
        <StackLayout x:Name="root"  Padding="30" >
            <Label Text="{Binding Id}" />
            <Label Text="{Binding Nome}" />
            <Label Text="{Binding Email}" />
            <!--<StackLayout BindingContext="{Binding Id, Source=}">
                <Label Text="{Binding Id, Source=BindingContext, x:Reference:root}"></Label>
            </StackLayout>-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>